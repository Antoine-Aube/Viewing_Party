<div class="h-screen flex items-center justify-center bg-gray-900">
  <div class="w-full max-w-md">
    <h1 class="text-center text-green-400 text-2xl mb-4 font-sans">Create New User</h1>
    <%= form_with url: "/register", method: :post, data: {turbo: false}, class: "bg-gray-800 p-6 rounded-lg" do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-green-400 mb-2" %>
        <%= f.text_field :name, class: "w-full p-2 rounded bg-gray-700 text-green-400 placeholder-green-300" %>
      </div>
      <div class="mb-4">
        <%= f.label :email, class: "block text-green-400 mb-2" %>
        <%= f.text_field :email, class: "w-full p-2 rounded bg-gray-700 text-green-400 placeholder-green-300" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block text-green-400 mb-2" %>
        <%= f.password_field :password, required: true, class: "w-full p-2 rounded bg-gray-700 text-green-400 placeholder-green-300" %>
      </div>
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-green-400 mb-2" %>
        <%= f.password_field :password_confirmation, required: true, class: "w-full p-2 rounded bg-gray-700 text-green-400 placeholder-green-300" %>
      </div>
      <div class="text-center">
        <%= f.submit "Register", class: "px-4 py-2 bg-green-400 text-gray-800 rounded hover:bg-green-500" %>
      </div>
    <% end %>
  </div>
</div>



