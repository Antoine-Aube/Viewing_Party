<div class="flex flex-col items-center mt-12">
  <h1 class="text-3xl mb-6">Create a viewing Party for: <%= @movie.title %></h1>

  <%= form_with url: viewing_party_create_path(params[:id], @movie.id), method: :post, data: {turbo: false}, class: "w-full max-w-xl bg-gray-800 p-6 rounded-lg shadow-md" do |f| %>
    <div class="mb-4">
      <%= f.label :duration, class: "block text-sm text-white" %>
      <%= f.number_field :duration, value: @movie.runtime, class: "w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:border-green-500 focus:outline-none" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :day, class: "block text-sm text-white" %>
      <%= f.date_field :day, value: Date.today, class: "w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:border-green-500 focus:outline-none" %>
    </div>

    <div class="mb-4">
      <%= f.label :view_time, class: "block text-sm text-white" %>
      <%= f.time_field :view_time, class: "w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:border-green-500 focus:outline-none" %>
    </div>

    <h2 class="text-2xl text-green-400 mb-4">Invite Other Users</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
      <% @users.each do |user| %>
        <label class="flex items-center text-white">
          <%= f.check_box "#{user.name}", class: "mr-2" %>
          <%= user.name %>
        </label>
      <% end %>
    </div>

    <div class="flex justify-center mt-6">
      <%= f.submit "Create Party", class: "px-6 py-2 bg-green-400 text-gray-800 rounded hover:bg-green-500 focus:outline-none" %>
    </div>
  <% end %>
</div>